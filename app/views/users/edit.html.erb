<h1>User info</h1>

<%= form_with model: @user, local: true do |f| %>

  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :Image %>
    <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
  </div>
  
  <div class="form-group">
    <%= f.label :Introduction %>
    <%= f.text_area :introduction %>
  </div>
  
  
<% end %>
